{
    "plugins": [
        "esformatter-braces",
        "esformatter-quotes"
    ],
    "indent": {
        "value": "    ",
        "alignComments": false
    },
    "lineBreak": {
        "before": {
            "FunctionDeclarationClosingBrace": ">=0",
            "FunctionExpressionClosingBrace": ">=0",
            "IfStatementClosingBrace": ">=0",
            "ObjectExpressionClosingBrace": ">=0",
            "Property": ">=0",
            "WhileStatementClosingBrace": ">=0"
        },
        "after": {
            "FunctionDeclarationOpeningBrace": ">=0",
            "FunctionExpressionOpeningBrace": ">=0",
            "IfStatementOpeningBrace": ">=0",
            "IfStatementClosingBrace": ">=0",
            "ObjectExpressionOpeningBrace": ">=0",
            "WhileStatementOpeningBrace": ">=0"
        }
    },
    "whitespace": {
        "before": {
            "WhileStatementClosingBrace": ">=0"
        },
        "after": {
            "WhileStatementOpeningBrace": ">=0"
        }
    },
    "quotes": {
        "type": "single",
        "avoidEscape": false
    }
}
